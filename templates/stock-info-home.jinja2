{% extends 'base.jinja2' %}
{% block head %}
<title>{{title}}</title>

<style>

h1{
    width: 100vw;
    text-align: center;
}

.buttonWrapper{
    text-align: center;
}

</style>
{% endblock %}

{% block content %}
<h1>Stock Information Search</h1>
    <div class="buttonWrapper">
        <form method="POST">
            <label>Stock/ETF Ticker:</label>
            <input type="text" id="stock" required="required" name="stock">
            <label>Statistic:</label>
            <select name="stat" id="stat">
                <option value="price">Price</option>
                <option value="longBusinessSummary">Description</option>
                <option value="dividendYield">Dividend Yield</option>
                <option value="lastDividendValue">Previous Dividend</option>
                <option value="exDividendDate">Next ex-Dividend Date</option>
                <option value="lastDividendValue">Payout Ratio</option>
                <option value="forwardEps">Forward EPS</option>
                <option value="trailingEps">Trailing EPS</option>
                <option value="pegRatio">PEG Ratio</option>
            </select>
            <a href="{{ url_for('my_form_stock_post') }}"><button>Submit</button></a>
        </form>
    <p>Add .TO as a suffix for stocks on the Toronto Stock Exchange</p>
    <p>Add .L as a suffix for stocks on the London Stock Exchange</p>
    <p>Add .V as a suffix for stocks on the Toronto Venture Exchange</p>
    <p>Add .NE as a suffix for stocks on the Neo Exchange </p>
    <a href="{{ url_for('my_app') }}"><button>Back</button></a>
    <a href="{{ url_for('my_form_graph') }}"><button>Graphing</button></a>
    <p></p>
    </div>
{% endblock %}