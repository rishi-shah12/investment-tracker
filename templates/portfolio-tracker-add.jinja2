{% extends 'base.jinja2' %}
{% block head %}
<title>{{title}}</title>

<style>

h1{
    width: 100vw;
    text-align: center;
}

form {
    text-align: center;
}

.buttonWrapper{
    padding-top: 5rem;
    text-align: center;
}
.form-wrapper{
    padding-top: 3rem;
}

</style>
{% endblock %}

{% block content %}
<h1>Add to Portfolio</h1>
<p>Add a transaction to the Investment Portfolio</p>
<hr></hr>
    <div class="form-wrapper">
        <form method="POST">
            <label>Date:</label>
            <input type="date" name="date" required="required" id="date">
            <label>Stock/ETF Ticker</label>
            <input type="text" id="stock" required="required" name="stock">
            <label>Number of Shares:</label>
            <input type="text" id="shares" required="required" name="shares">
            <label>Price Bought:</label>
            <input type="text" id="price" required="required" name="price">
            <a href="{{ url_for('add_transaction_app') }}"><button class="btn btn-primary">Submit</button></a>
        </form>
    </div>

{% endblock %}